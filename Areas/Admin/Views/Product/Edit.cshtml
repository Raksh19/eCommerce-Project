@model eCommerce.Models.Products
@{
    ViewData["Title"] = "Edit";
}

<br />

<h2 class="text-info">Update Product</h2>
<form asp-action="Edit" method="post">
    <div class="col-lg-pull-4 rounded border">
        <div asp-validation-summary="ModelOnly " class="text-danger">

        </div>
        <div>
            <div class="form-group row">

                
                <div class="col-3">
                    <img src="@Model.Image" width="200px" height="250px"/>
                </div>
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col5">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Description"></label>
                </div>
                <div class="col5">
                    <input asp-for="Description" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col5">
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Supplier"></label>
                </div>
                <div class="col5">
                    <input asp-for="Supplier" class="form-control" />
                </div>
                <span asp-validation-for="Supplier" class="text-danger"></span>
            </div>
          
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ImageFile"></label>
                </div>
                <div class="col5">
                    <input class="form-control" type="file" asp-for="ImageFile" />
                </div>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
            <div class="col-1">
                

            </div>
            
            
        </div>
    </div>
</form>

@section Scripts
    {
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}
}

