@using eCommerce.Models;
@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;Add New Product</a>
    </div>
</div>
<form method="Post">
    <div class="row">
        <div class="col-3">
            <input type="text"class="form-control" name="PName" placeholder="Enter Prouct Name to Search"/>
        </div>
        <div class="col-3">
            <input type="Submit" value="Search" class="btn btn-primary"/>
        </div>
        <div class="col-3"></div>
    </div>
</form>
<br /><br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(expression: c => c.Name)
            </th>
            <th>
                @Html.DisplayNameFor(expression: c => c.Description)
            </th>
            <th>
                @Html.DisplayNameFor(expression: c => c.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(expression: c => c.Price)
            </th>
            <th>
                @Html.DisplayNameFor(expression: c => c.Image)
            </th>
            <th></th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Supplier</td>
                <td>@item.Price</td>
                <td><img src="@item.Image" width="100px" height="100px" /></td>
                <td>
                    <partial name="ButtonPartial" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>


